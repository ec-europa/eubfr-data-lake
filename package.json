{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "deploy": "run-s deploy:resources deploy:services deploy:demo",
    "deploy:demo": "./scripts/deployment/deploy-demo.sh",
    "deploy:documentation": "./scripts/deployment/deploy-documentation.sh",
    "deploy:services": "./scripts/deployment/deploy.sh",
    "deploy:resources": "./scripts/deployment/deploy-resources.sh",
    "delete": "run-p delete:*",
    "delete:demo": "./scripts/cleaning/delete-demo.js",
    "delete:resources": "./scripts/cleaning/delete-resources.js",
    "delete:services": "./scripts/cleaning/delete.js",
    "docs:html": "./scripts/documentation/docs-html.js",
    "docs:md": "./scripts/documentation/docs-md.js",
    "flow": "flow",
    "flow-watch": "flow-watch",
    "lint": "eslint .",
    "precommit": "lint-staged",
    "test:integration": "lerna run --parallel test:integration",
    "test:unit": "lerna run --parallel test:unit",

    "flow-watch": "1.1.3",
    "gh-pages": "1.1.0",
    "husky": "0.14.3",
    "lerna": "2.10.2",
    "lint-staged": "7.0.4",
    "npm-run-all": "4.1.2",
    "prettier": "1.12.1",
    "stream-array": "1.1.2",
    "vinyl-fs": "3.0.2"
  },
  "workspaces": ["demo/**", "plugins/**", "resources/**", "services/**"]
